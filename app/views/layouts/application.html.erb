<!DOCTYPE html>
<html>
  <head>
    <title>Ienowa</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <header>
        <nav class="navbar navbar-fixed-top">
          <!--ログイン後のヘッダ-->
          <% if user_signed_in? %>
          <nav class="nav navbar-nav navbar-left">ienowa</nav>
            <ul class="nav navbar-nav navbar-right">
              <li>TOP</li>
              <li>検索する</li>
              <li>マイページ</li>
              <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
            </ul>
          <!--ログイン前のヘッダ-->
          <% else %>
          <nav class="nav navbar-nav navbar-left">ienowa</nav>
            <ul class="nav navbar-nav navbar-right">
              <li>About</li>
              <li><%= link_to "login", new_user_session_path %></li>
              <li><%= link_to "新規登録", new_user_registration_path %></li>
            </ul>
          <% end %>
        </nav>
      </header>
    </div>
    <div class="body">
      <div class="container">
        <%= yield %>
      </div>
    </div>
      <footer>
        <div class="col-md-4 col-md-offset-5 footer">
          <p>©︎ikumi</p>
        </div>
      </footer>
  </body>
</html>
