<div class="mx-auto index-searched-box col-md-12">
  <div class="row">
    <div class="rate-box col-md-4">
      <div class="rate-type-rate" >
        <%= loan.rate_type_i18n %>
        <div class="index-rate"><%= loan.rate %>%</div>
      </div>
    </div>

    <div class="index-table col-md-8">
      <table class="index-attribute col-md-5">
        <tbody>
          <tr>
            <th>年齢/性別</th>
            <td><%= loan.age %>歳<%= loan.sex_i18n %></td>
          </tr>
          <tr>
            <th>家族形態</th>
            <td><%= loan.family_form_i18n %></td>
          </tr>
          <tr>
            <th>雇用形態</th>
            <td><%= loan.employment_status_i18n %></td>
          </tr>
          <tr>
            <th>勤続年数</th>
            <td><%= loan.job_period_i18n %></td>
          </tr>
          <tr>
            <th>年収</th>
            <td><%= loan.income %>万円</td>
          </tr>
          <tr>
            <th>上場・非上場</th>
            <td><%= loan.listed_i18n %></td>
          </tr>
        </tbody>
      </table>

      <table class="index-loan col-md-6">
        <tbody>
          <tr>
            <th>借入金額</th>
            <td><%= loan.borrowing_amount %>万円</td>
          </tr>
          <tr>
            <th>借入期間</th>
            <td><%= loan.borrowing_period %>年</td>
          </tr>
          <tr>
            <th>毎月返済金額</th>
            <td><%= loan.payment %>円</td>
          </tr>
          <tr>
            <th>借入時期</th>
            <td><%= loan.borrowing_year %>年<%= loan.borrowing_month %>月</td>
          </tr>
          <tr>
            <th>住宅購入地</th>
            <td><%= loan.bought_place_i18n %></td>
          </tr>
          <tr>
            <th>借入形態</th>
            <td><%= loan.borrowing_form_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="index-reason col-md-12">
    <h6>おすすめ度</h6>
      <% if loan.score.present? %>
        <% if loan.score < -0.6 %>
          <i class="fas fa-star fa-1x"></i><i class="far fa-star fa-1x"></i><i class="far fa-star fa-1x"></i><i class="far fa-star fa-1x"></i><i class="far fa-star fa-1x"></i>
        <% elsif -0.6 <= loan.score && loan.score < -0.2 %>
          <i class="fas fa-star fa-1x"></i><i class="fas fa-star fa-1x"></i><i class="far fa-star fa-1x"></i><i class="far fa-star fa-1x"></i><i class="far fa-star fa-1x"></i>
        <% elsif -0.2 <= loan.score && loan.score < 0.2 %>
          <i class="fas fa-star fa-1x"></i><i class="fas fa-star fa-1x"></i><i class="fas fa-star fa-1x"></i><i class="far fa-star fa-1x"></i><i class="far fa-star fa-1x"></i>
        <% elsif 0.2 <= loan.score && loan.score < 0.6 %>
          <i class="fas fa-star fa-1x"></i><i class="fas fa-star fa-1x"></i><i class="fas fa-star fa-1x"></i><i class="fas fa-star fa-1x"></i><i class="far fa-star fa-1x"></i>
        <% else %>
          <i class="fas fa-star fa-1x"></i><i class="fas fa-star fa-1x"></i><i class="fas fa-star fa-1x"></i><i class="fas fa-star fa-1x"></i><i class="fas fa-star fa-1x"></i>
        <% end %>
      <% else %>
      <p>未登録</p>
      <% end %>
      </h6>
    <h6>選んだ理由とアドバイス</h6>
      <% if loan.family_form == "couple" %>
        <%= image_tag 'couple.png', :size=> '95x65', class: "family_form-image" %>
      <% elsif loan.family_form == "single" && loan.sex == "male" %>
        <%= image_tag 'male_single.png', :size=> '55x65', class: "family_form-image" %>
      <% elsif loan.family_form == "single" && loan.sex == "female" %>
        <%= image_tag 'female_single.png', :size=> '55x65', class: "family_form-image" %>
      <% else %>
        <%= image_tag 'family.png', :size=> '90x65', class: "family_form-image" %>
      <% end %>
    <div class="balloon"><%= loan.reason %></div>
  </div>
</div>