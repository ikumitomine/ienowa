<div class= "container">
	<div class= "mx-auto index-search-box col-md-9">
	<div class= "mx-auto" style= "width: 550px; padding-top: 30px; padding-bottom: 30px;">
<%= render "search", search_params: @search_params %>
</div>
</div>

<p>投稿一覧</p>
<%= link_to "銀行ごとに表示する", banks_path(@search_params) %><br>

<% @loans.each do |loan| %>
	<%= link_to bank_path(loan.bank) do %><%= loan.bank.name %><% end %>
	<%= loan.rate %>%
	<table>
		<tbody>
			<tr>
				<th>年齢</th>
				<td><%= loan.age %></td>
			</tr>
			<tr>
				<th>性別</th>
				<td><%= loan.sex_i18n %></td>
			</tr>
			<tr>
				<th>家族形態</th>
				<td><%= loan.family_form_i18n %></td>
			</tr>
			<tr>
				<th>雇用形態</th>
				<td><%= loan.employment_status_i18n %></td>
			</tr>
			<tr>
				<th>勤続年数</th>
				<td><%= loan.job_period_i18n %></td>
			</tr>
			<tr>
				<th>年収</th>
				<td><%= loan.income %>万円</td>
			</tr>
			<tr>
				<th>上場・非上場</th>
				<td><%= loan.listed_i18n %></td>
			</tr>
			<tr>
				<th>借入金額</th>
				<td><%= loan.borrowing_amount %>万円</td>
			</tr>
			<tr>
				<th>借入期間</th>
				<td><%= loan.borrowing_period %>年</td>
			</tr>
			<tr>
				<th>毎月返済金額</th>
				<td><%= loan.payment %>円</td>
			</tr>
			<tr>
				<th>借入時期</th>
				<td><%= loan.borrowing_year %>年<%= loan.borrowing_month %>月</td>
			</tr>
			<tr>
				<th>住宅購入地</th>
				<td><%= loan.bought_place_i18n %></td>
			</tr>
			<tr>
				<th>借入形態</th>
				<td><%= loan.borrowing_form_i18n %></td>
			</tr>
			<tr>
				<th>金利タイプ</th>
				<td><%= loan.rate_type_i18n %></td>
			</tr>
			<tr>
				<th>選んだ理由</th>
				<td><%= loan.reason %></td>
			</tr>
		</tbody>
	</table><br><br>
<% end %>
<%= paginate @loans %>
</div>